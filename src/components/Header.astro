---
// Array de enlaces para la navegaci√≥n
const navLinks = [
  { href: "#experiencia", text: "Experiencia" },
  { href: "#proyectos", text: "Proyectos" },
];
---

<header
  id="main-header"
  class="fixed top-0 z-50 w-full flex justify-center items-center py-4 px-6 bg-slate-900/80 backdrop-blur-sm"
>
  <nav class="flex justify-between items-center w-full max-w-5xl">
    <a
      href="/"
      class="text-lg font-bold text-white hover:text-indigo-400 transition-colors"
      >Lucas Gorini</a
    >

    <div class="hidden md:flex items-center gap-6">
      {
        navLinks.map((link) => (
          <a
            href={link.href}
            class="text-slate-300 hover:text-indigo-400 transition-colors"
          >
            {link.text}
          </a>
        ))
      }
    </div>

    <div class="flex items-center gap-4">
      <a
        href="https://github.com/schenvz"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="GitHub"
        class="text-white hover:text-indigo-400 transition-colors"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="feather feather-github"
          ><path
            d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"
          ></path></svg
        >
      </a>
      <a
        href="https://linkedin.com/in/lucas-gorini"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="LinkedIn"
        class="text-white hover:text-indigo-400 transition-colors"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="feather feather-linkedin"
          ><path
            d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
          ></path><rect x="2" y="9" width="4" height="12"></rect><circle
            cx="4"
            cy="4"
            r="2"></circle></svg
        >
      </a>
    </div>
  </nav>
</header>

---
// src/components/Header.astro

// I keep the list of navigation links here.
const navLinks = [
  { href: "#experiencia", text: "Experiencia" },
  { href: "#habilidades", text: "Habilidades" },
  { href: "#proyectos", text: "Proyectos" },
  { href: "#contacto", text: "Contacto" },
];
---
<header
  id="main-header"
  class="fixed top-0 z-40 w-full flex justify-center items-center py-4 px-6 backdrop-blur-sm transition-colors duration-300"
>
  <nav class="flex justify-between items-center w-full max-w-4xl">
    <a href="/" class="header-name text-lg font-bold transition-colors">
      Lucas Gorini
    </a>

    <!-- Desktop Navigation (hidden on mobile with 'hidden md:flex') -->
    <div class="hidden md:flex items-center gap-6">
      {
        navLinks.map((link) => (
          <a
            href={link.href}
            class="nav-link transition-transform duration-300 hover:scale-110"
          >
            {link.text}
          </a>
        ))
      }
    </div>
  </nav>
</header>

<!-- 
  All mobile menu elements (button, panel, and script) have been removed.
-->
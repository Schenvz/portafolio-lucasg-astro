---
export interface Props {
	title: string;
	description: string;
	tags: string[];
	imgSrc: string; // ¡NUEVO! Para la ruta de la imagen
	imgAlt: string; // ¡NUEVO! Para el texto alternativo de la imagen
	githubHref: string;
	liveHref: string;   // ¡NUEVO! Para el enlace a la demo
}
const { title, description, tags, imgSrc, imgAlt, githubHref, liveHref } = Astro.props;
---
<article class="bg-slate-800/50 rounded-lg shadow-lg overflow-hidden h-full flex flex-col">
    <div class="overflow-hidden">
        <img src={imgSrc} alt={imgAlt} class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300" loading="lazy" />
    </div>
    <div class="p-6 flex-grow flex flex-col">
        <h3 class="text-xl font-bold text-white mb-2">{title}</h3>
        <p class="text-slate-400 text-sm flex-grow">{description}</p>
        <div class="mt-4 flex flex-wrap gap-2">
            {tags.map((tag) => (
                <span class="bg-indigo-900/50 text-indigo-300 text-xs font-medium px-2.5 py-0.5 rounded-full">
                    {tag}
                </span>
            ))}
        </div>
    </div>
    <div class="px-6 pt-2 pb-4 border-t border-slate-700/50 flex items-center justify-end gap-4">
        <a href={githubHref} target="_blank" rel="noopener noreferrer" aria-label="Ver código en GitHub" class="text-slate-400 hover:text-white transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-github"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>
        </a>
        <a href={liveHref} target="_blank" rel="noopener noreferrer" aria-label="Ver demo en vivo" class="text-slate-400 hover:text-white transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-external-link"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
        </a>
    </div>
</article>
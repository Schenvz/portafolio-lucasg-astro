---
interface Props {
  href: string;
}
---
<a 
  href={Astro.props.href} 
  target="_blank" 
  rel="noopener noreferrer"
  class="social-pill inline-flex items-center justify-center gap-2 px-4 py-2 rounded-full border border-white/10 transition-all duration-300 hover:bg-white/10 hover:scale-110"
>
  <slot />
</a>

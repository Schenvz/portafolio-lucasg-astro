---
// src/components/SocialPill.astro
interface Props {
  href: string;
}
const { href } = Astro.props;
---
<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="social-pill inline-flex items-center justify-center gap-2 px-4 py-2 rounded-full border border-white/10 bg-white/5 text-sm font-medium transition-colors duration-300 hover:bg-white/10"
>
  <slot />
</a>
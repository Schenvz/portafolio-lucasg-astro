---
// src/components/SocialPill.astro
// I've updated this component to be a round icon button.
interface Props {
  href: string;
  ariaLabel: string;
}
const { href, ariaLabel } = Astro.props;
---
<!-- 
  This is now a circular container for an icon.
  - I've removed the horizontal padding (px-4) and set a fixed 
    width and height (w-12 h-12) to make it a perfect circle with 'rounded-full'.
  - The <slot /> will now only render the icon passed from the parent.
-->
<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  aria-label={ariaLabel}
>
  <slot />
</a>

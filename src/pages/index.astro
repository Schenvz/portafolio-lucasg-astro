---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import ProjectCard from "../components/ProjectCard.astro";
import ExperienceItem from "../components/ExperienceItem.astro";
import SkillBadge from "../components/SkillBadge.astro";
import Html5Icon from "../components/icons/Html5.astro";
import Css3Icon from "../components/icons/Css3.astro";
import JavaScriptIcon from "../components/icons/JavaScript.astro";
import ReactIcon from "../components/icons/React.astro";
import NodejsIcon from "../components/icons/Nodejs.astro";
import VercelIcon from "../components/icons/Vercel.astro";
import BootstrapIcon from "../components/icons/Bootstrap.astro";
import SassIcon from "../components/icons/Sass.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import VisualStudioCodeIcon from "../components/icons/VisualStudioCode.astro";
import PhotoshopIcon from "../components/icons/Photoshop.astro";
import BotonCvDropdown from "../components/BotonCvDropdown.astro";
// No necesitamos importar Analytics aquí porque ya está en el Layout
---

<Layout>
  <div class="max-w-4xl mx-auto px-4">
    <Hero />

    <div class="space-y-28 py-24 md:py-32">
      <section id="experiencia" data-aos="fade-up">
        <h2 class="section-title text-3xl font-bold mb-10 text-center">
          Experiencia Profesional
        </h2>
        <div class="max-w-3xl mx-auto">
          <ExperienceItem date="2022 - 2023" title="Desarrollador Frontend" company="Creative Minds">
            <ul class="list-disc pl-5 space-y-2">
              <li>Lideré la maquetación de interfaces de usuario desde diseños en Figma...</li>
              <li>Implementé optimizaciones de rendimiento web (WPO)...</li>
              <li>Colaboré estrechamente con el equipo de backend para integrar APIs REST...</li>
            </ul>
          </ExperienceItem>
          <ExperienceItem date="2023 - Actualidad" title="Desarrollador Full Stack" company="Tech Solutions Inc.">
            <ul class="list-disc pl-5 space-y-2">
              <li>Diseño y desarrollo de la arquitectura completa de aplicaciones web...</li>
              <li>Mantenimiento de sistemas backend robustos con Node.js...</li>
              <li>Participación activa en el ciclo de vida completo del desarrollo...</li>
            </ul>
          </ExperienceItem>
        </div>
      </section>

      <section id="habilidades" data-aos="fade-up">
        <h2 class="section-title text-3xl font-bold mb-10 text-center">
          Habilidades Técnicas
        </h2>
        <div class="flex flex-wrap justify-center gap-6 max-w-4xl mx-auto">
          <SkillBadge name="HTML5" colorClass="text-orange-500"><Html5Icon /></SkillBadge>
          <SkillBadge name="CSS3" colorClass="text-blue-500"><Css3Icon /></SkillBadge>
          <SkillBadge name="JavaScript" colorClass="text-yellow-400"><JavaScriptIcon /></SkillBadge>
          <SkillBadge name="React" colorClass="text-sky-400"><ReactIcon /></SkillBadge>
          <SkillBadge name="Node.js" colorClass="text-green-500"><NodejsIcon /></SkillBadge>
          <SkillBadge name="Vercel" colorClass="text-white"><VercelIcon /></SkillBadge>
          <SkillBadge name="Bootstrap" colorClass="text-purple-600"><BootstrapIcon /></SkillBadge>
          <SkillBadge name="Sass" colorClass="text-pink-500"><SassIcon /></SkillBadge>
          <SkillBadge name="GitHub" colorClass="text-white"><GitHubIcon /></SkillBadge>
          <SkillBadge name="VS Code" colorClass="text-blue-500"><VisualStudioCodeIcon /></SkillBadge>
          <SkillBadge name="Photoshop" colorClass="text-blue-800"><PhotoshopIcon /></SkillBadge>
        </div>
      </section>

      <section id="proyectos" data-aos="fade-up">
        <h2 class="section-title text-3xl font-bold mb-10 text-center">
          Proyectos Destacados
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <ProjectCard title="Gestor de Tareas Interactivo" description="Plataforma web para la gestión de proyectos y tareas personales..." tags={["React", "Firebase", "Vite", "Testing Library"]} imgSrc="https://placehold.co/600x400/0f172a/94a3b8?text=App+de+Tareas" imgAlt="Imagen de la aplicación de gestión de tareas" githubHref="https://github.com/schenvz" liveHref="https://github.com/schenvz" />
          <ProjectCard title="Portafolio Personal v2" description="El sitio que estás viendo ahora. Diseñado para ser un reflejo de mis habilidades..." tags={["Astro", "Tailwind CSS", "UI/UX"]} imgSrc="https://placehold.co/600x400/0f172a/94a3b8?text=Mi+Portafolio" imgAlt="Imagen del proyecto de portafolio personal" githubHref="https://github.com/schenvz" liveHref="#" />
        </div>
      </section>
      
      <section id="contacto" class="text-center p-8 md:p-12 rounded-2xl bg-white dark:bg-slate-800/50 shadow-lg dark:border dark:border-white/10" data-aos="fade-up">
        <h2 class="section-title text-3xl font-bold mb-4">Hablemos</h2>
        <p class="text-lg max-w-xl mx-auto mb-8">Estoy disponible para nuevas oportunidades y colaboraciones...</p>
        <div class="flex flex-wrap justify-center items-center gap-4">
          <a href="mailto:lucasgori123@gmail.com" class="cta-button font-bold py-2 px-4 rounded-full inline-flex items-center transition-colors duration-300">Enviar un email</a>
          <BotonCvDropdown />
        </div>
      </section>
    </div>
  </div>
</Layout>
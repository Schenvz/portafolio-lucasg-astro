---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import ProjectCard from "../components/ProjectCard.astro";
import ExperienceItem from "../components/ExperienceItem.astro";
import SkillBadge from "../components/SkillBadge.astro";
import Html5Icon from "../components/icons/Html5.astro";
import Css3Icon from "../components/icons/Css3.astro";
import JavaScriptIcon from "../components/icons/JavaScript.astro";
import ReactIcon from "../components/icons/React.astro";
import NodejsIcon from "../components/icons/Nodejs.astro";
import VercelIcon from "../components/icons/Vercel.astro";
import BootstrapIcon from "../components/icons/Bootstrap.astro";
import SassIcon from "../components/icons/Sass.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import VisualStudioCodeIcon from "../components/icons/VisualStudioCode.astro";
import PhotoshopIcon from "../components/icons/Photoshop.astro";
import BotonCvDropdown from "../components/BotonCvDropdown.astro";
---

<Layout>
  <div class="max-w-4xl mx-auto px-4">
    <div data-aos="fade-in" data-aos-duration="1000">
      <Hero />
    </div>

    <div class="space-y-28 py-24 md:py-32">
      <section id="experiencia" class="scroll-mt-24">
        <h2 class="section-title text-3xl font-bold mb-10 text-center" data-aos="fade-up">
          Experiencia Profesional
        </h2>
        <div class="max-w-3xl mx-auto text-center" data-aos="fade-up" data-aos-delay="100">
          <p class="text-lg italic text-slate-500 dark:text-slate-400">
            Actualmente actualizando mi trayectoria profesional. ¡Vuelve pronto para ver los detalles!
          </p>
        </div>
      </section>

      <section id="habilidades" class="scroll-mt-24">
        <h2 class="section-title text-3xl font-bold mb-10 text-center" data-aos="fade-up">
          Habilidades Técnicas
        </h2>
        <div class="flex flex-wrap justify-center gap-6 max-w-4xl mx-auto" data-aos="fade-up">
          <div data-aos="fade-up" data-aos-delay="50"><SkillBadge name="HTML5" colorClass="text-orange-500"><Html5Icon /></SkillBadge></div>
          <div data-aos="fade-up" data-aos-delay="100"><SkillBadge name="CSS3" colorClass="text-blue-500"><Css3Icon /></SkillBadge></div>
          <div data-aos="fade-up" data-aos-delay="150"><SkillBadge name="JavaScript" colorClass="text-yellow-400"><JavaScriptIcon /></SkillBadge></div>
          <div data-aos="fade-up" data-aos-delay="200"><SkillBadge name="React" colorClass="text-sky-400"><ReactIcon /></SkillBadge></div>
          <div data-aos="fade-up" data-aos-delay="250"><SkillBadge name="Node.js" colorClass="text-green-500"><NodejsIcon /></SkillBadge></div>
          <div data-aos="fade-up" data-aos-delay="300"><SkillBadge name="Vercel" colorClass="text-white"><VercelIcon /></SkillBadge></div>
          <div data-aos="fade-up" data-aos-delay="350"><SkillBadge name="Bootstrap" colorClass="text-purple-600"><BootstrapIcon /></SkillBadge></div>
          <div data-aos="fade-up" data-aos-delay="400"><SkillBadge name="Sass" colorClass="text-pink-500"><SassIcon /></SkillBadge></div>
          <div data-aos="fade-up" data-aos-delay="450"><SkillBadge name="GitHub" colorClass="text-white"><GitHubIcon /></SkillBadge></div>
          <div data-aos="fade-up" data-aos-delay="500"><SkillBadge name="VS Code" colorClass="text-blue-500"><VisualStudioCodeIcon /></SkillBadge></div>
          <div data-aos="fade-up" data-aos-delay="550"><SkillBadge name="Photoshop" colorClass="text-blue-800"><PhotoshopIcon /></SkillBadge></div>
        </div>
      </section>

      <section id="proyectos" class="scroll-mt-24">
        <h2 class="section-title text-3xl font-bold mb-10 text-center" data-aos="fade-up">
          Proyectos Destacados
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div data-aos="zoom-in-up" data-aos-delay="100">
            <ProjectCard
              title="Gestor de Tareas Interactivo"
              description="Plataforma web para la gestión de proyectos y tareas personales. Permite a los usuarios crear, organizar y dar seguimiento a sus actividades diarias a través de una interfaz limpia y reactiva."
              tags={["React", "Firebase", "Vite", "Testing Library"]}
              imgSrc="https://placehold.co/600x400/0f172a/94a3b8?text=App+de+Tareas"
              imgAlt="Imagen de la aplicación de gestión de tareas"
              githubHref="https://github.com/schenvz"
              liveHref="https://github.com/schenvz"
            />
          </div>
          <div data-aos="zoom-in-up" data-aos-delay="300">
            <ProjectCard
              title="Portafolio Personal v2"
              description="El sitio que estás viendo ahora. Diseñado para ser un reflejo de mis habilidades, centrado en el rendimiento y la estética, utilizando las últimas tecnologías del desarrollo web estático."
              tags={["Astro", "Tailwind CSS", "UI/UX"]}
              imgSrc="https://placehold.co/600x400/0f172a/94a3b8?text=Mi+Portafolio"
              imgAlt="Imagen del proyecto de portafolio personal"
              githubHref="https://github.com/schenvz"
              liveHref="#"
            />
          </div>
        </div>
      </section>
      
      <section id="contacto" class="scroll-mt-24 text-center p-8 md:p-12 rounded-2xl bg-white dark:bg-slate-800/50 shadow-lg dark:border dark:border-white/10" data-aos="fade-left">
        <h2 class="section-title text-3xl font-bold mb-4">Hablemos</h2>
        <p class="text-lg max-w-xl mx-auto mb-8">
          Estoy disponible para nuevas oportunidades y colaboraciones. Si tienes
          un proyecto en mente o simplemente quieres conectar, no dudes en
          contactarme.
        </p>
        <div class="flex flex-wrap justify-center items-center gap-4">
          <a href="mailto:lucasgori123@gmail.com" class="cta-button font-bold py-2 px-4 rounded-full inline-flex items-center transition-colors duration-300">
            Enviar un email
          </a>
          <BotonCvDropdown />
        </div>
      </section>
    </div>
  </div>
</Layout>